<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>MyBlog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" />
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">Blog Articles</h1>
      <a href="/new" class="btn btn-success">New Article</a>

      <% blog.forEach(blog => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= blog.title %></h4>
          <div class="card-subtitle text-muted mb-2"><%= blog.createdAt.toLocaleDateString() %></div>
          <div class="card-text mb-2"><%= blog.description %></div>
          <a href="blog/<%= blog.slug %>" class="btn btn-primary">Read More</a>
          <a href="blog/edit/<%= blog.id %>" class="btn btn-info">Edit</a>
          <form action="/blog/<%= blog.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <% }) %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>
